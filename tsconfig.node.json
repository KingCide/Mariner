{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext",
    "outDir": "dist-electron",
    "types": ["node", "electron"]
  },
  "include": [
    "electron/**/*.ts",
    "types/**/*.d.ts",
    "package.json"
  ]
}
